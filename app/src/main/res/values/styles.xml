<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:background">@drawable/shape_input</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:onClick">onSingleClick</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>
